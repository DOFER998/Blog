{
  "compilerOptions": {
    "rootDirs": ["src"],
    "lib": ["es2020"],
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
